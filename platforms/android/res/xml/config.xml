<?xml version='1.0' encoding='utf-8'?>
<widget id="de.quetschpommes.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="androidstatusbarcolor">
        <param name="android-package" value="com.internrocket.plugins.statusbarcolor.StatusBarColor" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="mdpi" src="./www/img/res/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="./www/img/res/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="./www/img/res/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="./www/img/res/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="./www/img/res/mipmap-xxxhdpi/ic_launcher.png" />
    <name>Quetschpommes</name>
    <description>
        Ein Fynn Kliemann Soundboard
    </description>
    <author email="mail@moin.media" href="http://moin.media">
        moin.media
    </author>
    <content src="index.html" />
    <preference name="StatusBarBackgroundColor" value="#fcbe32" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DefaultVolumeStream" value="media" />
</widget>
